<h1>Contact us: </h1>

<%= form_for :contact, url: contacts_path do |f| %>
	<% if @contact && @contact.errors.any? %>
		<p>
			<ul>
				<% @contact.errors.full_messages.each do |msg|  %>
					<li><%= msg %></li>
				<% end -%>
			</ul>
		</p>
	<% end %>	
	<p>
		<%= f.label :email %><br />
		<%= f.text_field :email, class: "form-control", placeholder: "example@example.com", style: "width: 400px"  %>
	</p>
	<p>
		<%= f.label :message %><br />
		<%= f.text_area :message, class: "form-control", style: "width: 400px", rows: "3", placeholder: "Input your message here" %>
	</p>

	<p>
		<%= f.submit 'Send message', class: "btn btn-success btn-sm" %>
	</p>

<% end %>