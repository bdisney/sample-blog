<h3><%= @article. title %></h3>
<p><%= @article.text %></p>
<p><sub>Added at: <%= @article.created_at %></sub></p>

<br />


<%= form_for :article, url:article_path(@article), method: :put do |f| %>
	<% if @article && @article.errors.any? %>
		<p>
			<ul>
				<% @article.errors.full_messages.each do |msg|  %>
					<li><%= msg %></li>
				<% end -%>
			</ul>
		</p>
	<% end %>	
	<p>
		<%= f.label :title %><br />
		<%= f.text_area :title, class: "form-control", style: "width: 400px",rows: "2" %>
	</p>
	<p>
		<%= f.label :text %><br />
		<%= f.text_area :text, class: "form-control", style: "width: 400px", rows: "4" %>
	</p>

	<p>
		<button type="submit" class="btn btn-success btn-sm">Update</button>
	</p>

<% end %>

