
<% @articles.each do |article| %>
	<h3><%= article. title %></h3>
	<p><%= article.text %></p>
	<p><sub>Added by <%= article.user.username %>  <%= time_ago_in_words(article.created_at) %> ago</sub>  </p>
	<p>
		<a href="<%= article_path(article)%>" class="btn btn-primary btn-sm active" role="button">Add comments</a>
		<a href="<%= edit_article_path(article)%>" class="btn btn-info btn-sm active" role="button">Edit</a>

		<%= link_to 'Delete',
						 article_path(article),
						 	method: :delete,
						 	class: "btn btn-danger btn-sm active",
						 	data: {confirm: 'Are you sure?'} %>
	</p>


	<br />
<% end %>
</body>