<h1>New article!</h1>

<%= form_for :article, url: articles_path do |f| %>
	<% if @article && @article.errors.any? %>
		<p>
			<ul>
				<% @article.errors.full_messages.each do |msg|  %>
					<li><%= msg %></li>
				<% end -%>
			</ul>
		</p>
	<% end %>	
	<p>
		<%= f.label :title %><br />
		<%= f.text_area :title, class: "form-control", style: "width: 400px",rows: "2", placeholder: "Input article title here" %>
	</p>
	<p>
		<%= f.label :text %><br />
		<%= f.text_area :text, class: "form-control", style: "width: 400px", rows: "4", placeholder: "Blogozorium is waiting for your amaizing story! Surprise us! " %>
	</p>

	<p>
		<%= f.submit 'Post article', class: "btn btn-success btn-sm" %>
		<%= link_to 'Cancel', articles_path, class: "btn btn-danger btn-sm" %>
	</p>

<% end %>

