<h3><%= @article. title %></h3>
<p><%= @article.text %></p>
<p><sub>Added by <%= @article.user.username %> at: <%= time_ago_in_words(@article.created_at) %></sub></p>
<p><%= link_to 'Show all articles', articles_path %></p>


<h3>Comments:</h3>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<% @article.comments.each do |comment|%>
		<%= comment.body %>
		<% if comment.body != nil%>
			<p><sub>Added by   at: <%= comment.created_at %></sub></p>
		<% end %>
	<% end %>
	<p>
		
	</p>
	<p>
		<%= f.label :comment %><br />
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit 'Add comment' %>
	</p>
<% end %>
</p>


