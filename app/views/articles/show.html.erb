<h3><%= @article. title %></h3>
<p><%= @article.text %></p>
<p><sub>Added by <%= @article.user.username %> <%= time_ago_in_words(@article.created_at) %> ago</sub></p>
<p><%= link_to 'Show all articles', articles_path %></p>


<h3>Comments:</h3>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<% @article.comments.each do |comment|%>
		<%= comment.body %>
		<% if comment.body != nil%>
			<p><sub>Added by <%= comment.user.username %> <%= time_ago_in_words (comment.created_at) %> ago</sub></p>
		<% end %>
	<% end %>
	<p>
		
	</p>
	<p>
	<br/>	
	<br/>

	<%= f.text_area :body, class: "form-control", style: "width: 400px", rows: "4", placeholder: "Surprise us! " %>
	</p>
	<p>
		<%= f.submit 'Add comment',  class: "btn btn-success btn-sm" %>
		<%= link_to 'Cancel', articles_path, class: "btn btn-danger btn-sm" %>
	</p>
<% end %>
</p>


