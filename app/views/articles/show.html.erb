<h3><%= @article. title %></h3>
<p><%= @article.text %></p>
<p><sub>Added at: <%= @article.created_at %></sub></p>
<p><%= link_to 'Show all articles', articles_path %></p>

<p>
<h3>Comments:</h3>
<%= form_for([@article, @article.comments.build]) do |f| %>

	<% @article.comments.each do |comment|%>
	<%= comment.body %>
	<% if comment.body != nil%>
	<p><sub>Added by <%= comment.author %> at: <%= comment.created_at %></sub></p>
	<% end %>
	<% end %>
	
	
	<p>
		<%= f.label :author %><br />
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :comment %><br />
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit 'Add comment' %>
	</p>
	</p>
		

<% end %>
</p>

